{
  "name": "nextjs-ssr-boilerplate",
  "version": "0.0.1",
  "description": "Boilerplate with Next.js, TypeScript, SASS",
  "author": "Riccardo Bellingeri",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rbelling/nextjs-ssr-boilerplate.git"
  },
  "homepage": "https://github.com/rbelling/nextjs-ssr-boilerplate#readme",
  "keywords": [
    "next.js",
    "typescript",
    "sass",
    "lighthouse",
    "performance budget"
  ],
  "main": "index.js",
  "scripts": {
    "dev": "next",
    "lint": "stylelint styles/**/*.scss && eslint . --ext .js,.tsx",
    "test": "yarn lint",
    "build": "next build && next export",
    "start": "PORT=3000 serve ./out",
    "__Performance profiling scripts": "",
    "lighthouse:dev": "cd performance/reports && npx lighthouse http://localhost:3000 --budget-path=../budget.json --view",
    "analyze-bundle": "BUNDLE_ANALYZE=browser yarn build"
  },
  "engines": {
    "node": ">= 10.0.0"
  },
  "dependencies": {
    "next": "^9.0.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-markdown": "^4.2.2"
  },
  "devDependencies": {
    "@types/react": "^16.8.22",
    "@typescript-eslint/eslint-plugin": "^1.11.0",
    "@typescript-eslint/parser": "^1.11.0",
    "@zeit/next-bundle-analyzer": "^0.1.2",
    "@zeit/next-css": "^1.0.1",
    "@zeit/next-sass": "^1.0.1",
    "autoprefixer": "^9.6.0",
    "eslint": "^6.0.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-config-standard": "^13.0.1",
    "eslint-plugin-compat": "^3.2.0",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.14.2",
    "eslint-plugin-standard": "^4.0.0",
    "html-loader": "^0.5.5",
    "husky": ">=1",
    "lint-staged": ">=8",
    "markdown-loader": "^5.1.0",
    "next-compose-plugins": "^2.2.0",
    "node-sass": "^4.12.0",
    "postcss-preset-env": "^6.6.0",
    "prettier": "^1.18.2",
    "serve": "^11.1.0",
    "stylelint": "^10.1.0",
    "stylelint-config-prettier": "^5.2.0",
    "stylelint-config-standard": "^18.3.0",
    "stylelint-prettier": "^1.1.1",
    "typescript": "3.5.x"
  },
  "browserslist": [
    ">= 0.5%",
    "not ie 11",
    "not op_mini all",
    "not dead"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.(js|tsx)": [
      "eslint --fix",
      "git add"
    ],
    "*.css": [
      "stylelint --fix",
      "git add"
    ]
  }
}
